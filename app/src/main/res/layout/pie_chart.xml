<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:layout_gravity="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StackQAMain"
    tools:deviceIds="wear">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/dev_label_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="10dp">
    </TextView>

    <ImageView
        android:id="@+id/image_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:paddingStart="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/number_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/dev_label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/white"
        android:textSize="20sp">
    </TextView>



</androidx.wear.widget.BoxInsetLayout>